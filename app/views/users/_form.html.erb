<%= form_with(model: user, local: true) do |form| %>
  <%= render 'shared/form/errors', errors: user.errors %>

  <div class="form-group">
    <%= form.label :first_name, t(:first_name) %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name, t(:last_name) %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :locale, t(:locale) %>
    <%= form.select :locale, [['ðŸ‡¦ðŸ‡· EspaÃ±ol', 'es'], ['ðŸ‡ºðŸ‡¸ English', 'en']], {}, class: "bg-white form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :time_zone, t(:time_zone) %>
    <%= form.time_zone_select :time_zone, ActiveSupport::TimeZone.country_zones(:ar), { default: 'Eastern Time (US & Canada)' }, { class: 'bg-white form-control' } %>
  </div>

  <div class="form-group">
    <%= form.hidden_field :company_logo, value: user.cached_company_logo_data %>
    <%= form.label :company_logo, t(:company_logo) %>
    <%= form.file_field :company_logo, class: "form-control", style: "height: 45px;" %>
  </div>

  <div class="form-group">
    <%= form.label :company_name, t(:company_name) %>
    <%= form.text_field :company_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :company_address, t(:company_address) %>
    <%= form.text_field :company_address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :company_email, t(:company_email) %>
    <%= form.text_field :company_email, class: "form-control" %>
  </div>

  <div class="text-right">
    <%= link_to t(:cancel), home_url, class: "btn btn-secondary" %>
    <%= form.submit t(:save), class: "btn btn-primary" %>
  </div>
<% end %>
